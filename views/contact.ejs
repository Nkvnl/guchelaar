<section id="section-contact">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 text-center">
         <h1 class="blue py-4 text-center">Contactgegevens</h1>

                    <p class="py-3"><strong>EMAIL</strong></p>
                    <p class="brand">Guchelaar<strong>Auto Detailing</strong></p>
                    Riegshoogtendijk 28 <br>
                    7913 AZ Hollandscheveld <br>
